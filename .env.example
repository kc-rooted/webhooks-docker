# Server Configuration
NODE_ENV=production
PORT=3000

# Monday.com Configuration
# Personal API token for making API calls to Monday.com
MONDAY_API_TOKEN=your_monday_api_token_here
# Get your webhook secret from Monday.com app settings (optional for webhook signature verification)
MONDAY_WEBHOOK_SECRET=your_monday_webhook_secret_here

# Airbyte Configuration
# Set a secure token for Airbyte webhook authentication
AIRBYTE_WEBHOOK_TOKEN=your_secure_airbyte_token_here

# Optional: Logging Configuration
LOG_LEVEL=info

# Optional: CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=*

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100